{
    "name": "yiisoft/yii-form",
    "type": "library",
    "description": "The package helps with implementing data entry forms.",
    "keywords": [
        "yii",
        "form"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii-form/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii-form"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "yiisoft/event-dispatcher": "^3.0@dev",
        "yiisoft/factory": "^3.0@dev",
        "yiisoft/html": "^3.0@dev",
        "yiisoft/http": "^1.0@dev",
        "yiisoft/strings": "^3.0@dev",
        "yiisoft/validator": "^3.0@dev",
        "yiisoft/widget": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phan/phan": "^2.4",
        "yiisoft/composer-config-plugin": "^1.0@dev",
        "yiisoft/di": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Form\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Form\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin": {
            "tests": "config/tests.php"
        }
    },
    "scripts": {
        "phan": "phan --progress-bar -o analysis.txt"
    },
    "config": {
        "sort-packages": true
    }
}
